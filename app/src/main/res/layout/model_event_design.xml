<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eventShowCardViewId"
        android:layout_margin="10dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="3dp"
        app:cardBackgroundColor="#dedede">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/showTravelDestinationTvId"
                android:gravity="center"
                android:text="Location"
                android:textSize="13sp"
                android:textColor="@color/textColor"
                android:fontFamily="@font/heartwarming"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/showTravelStartingDateTvId"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:text="Start Date"
                    android:textSize="13sp"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/heartwarming"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/showTravelEndingDateTvId"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:text="End Date"
                    android:textSize="13sp"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/heartwarming"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/showTravelEstimatedBudgetTvId"
                android:layout_weight=".5"
                android:gravity="center"
                android:text="Budget"
                android:textSize="13sp"
                android:textColor="@color/textColor"
                android:fontFamily="@font/heartwarming"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>